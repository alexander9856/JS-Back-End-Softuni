<main>

    <!-- Details Page - Auction owner -->
    <section id="catalog-section">

        <h1 class="item">
            {{auction.title}}

            <div class="f-right">
                <a class="action pad-small f-left" href="/{{auction._id}}/edit">Edit</a>
                <a class="action pad-small f-left" href="/{{auction._id}}/delete">Delete</a>
            </div>
        </h1>
        <div class="item padded">

            <div class="layout right large">

                <div class="col">
                    <img src="{{auction.image}}" class="img-large">
                </div>

                <div class="content pad-med">

                    <p>In category: <strong>{{auction.category}}</strong></p>
                    <p>{{auction.description}}</p>

                    <div class="align-center">
                        <div>
                            Current price: $<strong>{{auction.price}}</strong>
                        </div>

                        <div>
                            <!-- If there is a bidder -->
                            {{#if bidder}}
                            Bid by <strong>{{bidderName}}</strong>

                            <!-- # Bonus: If there is a bidder -->

                            <a class="action pad-med cta" href="/{{auction._id}}/close">Close Auction</a>
                            <!-- If there are no bids -->
                            {{else}}
                            No bids
                            {{/if}}
                        </div>
                    </div>

                </div>
            </div>

            <footer>Listed by {{authorName}}</footer>
        </div>

    </section>

</main>